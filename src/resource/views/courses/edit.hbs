<div class="mt-4">
    <h3>Sửa khóa học</h3>
    <div class="col-md-3 col-lg-4 ">
            <form method = "POST" action="/courses/{{course._id}}?_method=PUT">
            <div class="form-group">
                <label for= id="""name">Tên khóa học</label>
                <input type="text" class="form-control" value="{{course.name}}" name="name">
            </div>
            <div class="form-group">
                <label for="description">Mô tả</label>
                <textarea name="description" rows ="4" cols ="40" > {{course.description}} </textarea>
            </div>
            <div class="form-group">
                <label for="videoId">Video Id</label>
                <input type="text" class="form-control" value="{{course.videoId}}" name="videoId">
            </div>
            <div class="form-group">
                <label for="level">Trình độ</label>
                <input type="text" class="form-control" value="{{course.level}}" name="level">
            </div>
            <button type="submit" class="btn btn-primary mt-4"> Lưu lại</button>
        </form>
    </div>
</div>